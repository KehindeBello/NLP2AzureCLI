    "param_patterns": {
      "RESOURCE_GROUP_NAME": "resource group[d:\\s]+(\\w+)|resource-group[d:\\s]+(\\w+)|resourcegroup[d:\\s]+(\\w+)",
      "VM_NAME": "name[d:\\s]+(\\w+)|vmname[d:\\s]+(\\w+)"
