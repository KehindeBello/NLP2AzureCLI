    "patterns": [
      "redeploy vm",
      "redeploy a virtual machine",
      "redeploy"
    ],
    "command": "az vm redeploy --resource-group {RESOURCE_GROUP_NAME} --name {VM_NAME}",
    "param_patterns": {
