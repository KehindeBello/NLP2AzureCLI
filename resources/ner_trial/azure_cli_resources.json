    "param_patterns": {
      "REGION": "location\\s+(\\w+)|region\\s+(\\w+)|country\\s+(\\w+)",
      "RESOURCE_GROUP_NAME": "name[d:\\s]+(\\w+)|vmname[d:\\s]+(\\w+)"
    },
    "param_description": {
      "REGION": "The location of the resources",
      "RESOURCE_GROUP_NAME": "The name of the group resource"
    }
  }
